<h1>Listing posts</h1>

<table>
  <tr>
    <th>Note</th>
    <th>Rating</th>
    <th>Picture</th>
    <th>Thumbup</th>
    <th>Thumbdown</th>
    <th>Food</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.note %></td>
    <td><%= post.rating %></td>
    <td><%= post.picture %></td>
    <td><%= post.thumbup %></td>
    <td><%= post.thumbdown %></td>
    <td><%= link_to post.food.name, "#" %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>

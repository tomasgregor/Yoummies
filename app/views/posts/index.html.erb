<p id="notice"><%= notice %></p>

<div class="container">
	<h1>Listing posts</h1>

	<table>
	  <tr>
	    <th>Note</th>
	    <th>Rating</th>
	    <th>Picture</th>
	    <th>Food / Shop</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @posts.each do |post| %>
	  <tr>
	    <td><%= post.note %></td>
	    <td><%= post.rating %></td>
	    <td><%= post.picture %></td>
	    <td><% if post.postable  %>
				<%= link_to post.postable.name, post.postable %>
			<% end  %>
		</td>
		<td><%= link_to 'Show', post %></td>
	    <td><%= link_to 'Edit', edit_post_path(post) %></td>
	    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>
	</table>

	<br />

	<%= link_to 'New Post', new_post_path %>
</div>
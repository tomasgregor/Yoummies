<p id="notice"><%= notice %></p>

<%= render 'layouts/top_navigation' %>


<div class="container">
	<%= form_tag "/sessions" do %>
		<div class="field">
			<%= label_tag :name %>
			<%= text_field_tag :name %>
		</div>
		<div class="field">
			<%= label_tag :surname %>
			<%= text_field_tag :surname %>
		</div>
		<div class="field">
			<%= label_tag :email %>
			<%= email_field_tag :email %>
		</div>
		<div class="field">
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</div>
		<div class="field">
			<%= label_tag :password_confirmation %>
			<%= password_field_tag :password_confirmation %>
		</div>
	<% end %>
</div>
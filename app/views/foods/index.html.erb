<h1>Listing foods</h1>

<table>
  <tr>
    <th>ID</th>
	<th>Name</th>
    <th>Price</th>
    <th>Picture</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @foods.each do |food| %>
  <tr>
	<td><%= food.id %></td>
    <td><%= food.name %></td>
    <td><%= food.price %></td>
    <td><%= food.picture %></td>
    <td><%= food.category_id %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

